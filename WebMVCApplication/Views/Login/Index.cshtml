@model WebMVCApplication.Models.ResultViewModel

 <!DOCTYPE html>
 <html lang="en">
 <head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loginPage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .popup-notification {
            position: fixed;
            top: -30px;
            right: 100px;
            background-color: #fff;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            padding: 15px;
            opacity: 0;
            transition: opacity 0.3s ease, top 0.3s ease;

            display: flex;
            flex-direction: column;
            min-width: 200px;
        }

        .popup-notification.show {
            top: 50px;
            opacity: 1;
         }
    </style>
 </head>
 <body>
    @if (Model != null)
    {
        <div id="popup" class="popup-notification">
            <p class="title-popup">@Model.Title</p>
            <div class="description-popup">
                @foreach (var des in Model.Description)
                {
                    <p>@des</p>
                }
            </div>
        </div>
    }
     

     <div class="overall-page">
         <div class="left-side">
            <div style="position:absolute; top: 30px; left: 30px; z-index: 1;">
                <img class="icon-logo" src="~/icons/logo-removebg-preview-Lnp3c8Vd.png" />
            </div>
            <div class="introduction-group">
                <div>
                    <img class="img-dashboard" src="~/img/decoration-Bhb7fEp8.png" />
                </div>
                <p class="system-name">Student Attendance Management System</p>
                <p class="description">
                    Student Tracking with Fingerprint Sensor,
                    Managing education needs
                </p>
            </div>
         </div>

         <div class="right-side">
            <p class="signin-title">Sign In to your Account</p>
            <p class="welcome-content">Welcome back! Please enter your detail</p>
            <form method="post" action="/login">
                <div class="email-input-container">
                    <i class="fa-regular fa-envelope"></i>
                    <input id="Username" class="input-field" type="text" placeholder="Email or username" />
                </div>
                <div class="password-input-container">
                    <i class="fa-solid fa-lock"></i>
                    <input id="Password" class="input-field" type="password" placeholder="Input password" />
                    <i class="fa-regular fa-eye"></i>
                </div>
                <div class="more-action-account">
                    <div style="display: flex;">
                        <input type="checkbox" />
                        <p>Remember me</p>
                    </div>
                    <p class="forget-password-p">Forgot password</p>
                </div>
                <button style="width:100%;" class="sigin-button" type="submit">Sign in</button>
            </form>
            <div class="gg-sigin-option-container">
                <div></div>
                <p>Or sign in with</p>
                <div></div>
            </div>
            <div class="signin-gg-container">
                <img class="gg-icon" src="~/icons/googleIcon-DuXP27S6.png" />
                <p>Google</p>
            </div>

            <p class="contact-p">Don't have an account? <span>Contact Us!</span></p>
         </div>
     </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function (){
            var popup = $("#popup");
            if (popup.length) {
                setTimeout(function () {
                    popup.addClass("show");
                }, 50);

                setTimeout(function () {
                    popup.removeClass("show");
                }, 3000);
            }
        })
    </script>
 </body>
 </html>



